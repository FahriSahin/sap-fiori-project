<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="pictureDialog2" title="Employee Picture">
        <content>
            <Image id="_IDGenImage1" 
                src="{
                  path: 'Employee>/Photo',
                  formatter: '.formatPicture'
                }"
                width="150px" height="150px"
                class="centerImage"/>
        </content>
        <buttons>
            <Button text="Close" press="onClosePictureFragment" id="mybutton1"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>
