<mvc:View
    controllerName="project2.controller.EmployeeDetail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:layout="sap.ui.layout.form">

    <Page id="employeeDetailPage" title="Employee Detail" showNavButton="true" navButtonPress="onNavBack">
        <content>
            <Title id="_IDGenTitle2" text="General Information" level="H2" class="myTitlePadding"/>
            <layout:SimpleForm id="_IDGenSimpleForm" editable="false" columnsL="2" columnsM="2" labelSpanM="1" labelSpanL="1">
                
                <Label id="_IDGenLabel11" text="Employee ID" design="Bold"/>
                <Input id="_IDGenInput" value="{EmployeeID}" editable="false"/>

                <Label id="_IDGenLabel16" text="First Name" design="Bold"/>
                <Input id="_IDGenInput1" value="{FirstName}" editable="false"/>

                <Label id="_IDGenLabel20" text="Last Name" design="Bold"/>
                <Input id="_IDGenInput2" value="{LastName}" editable="false"/>

                <Label id="_IDGenLabel21" text="Title" design="Bold"/>
                <Input id="_IDGenInput3" value="{Title}" editable="false"/>

                <Label id="_IDGenLabel22" text="Title Of Courtesy" design="Bold"/>
                <Input id="_IDGenInput4" value="{TitleOfCourtesy}" editable="false"/>

                <Label id="_IDGenLabel23" text="Birth Date" design="Bold"/>
                <Input id="_IDGenInput5" value="{BirthDate}" editable="false"/>

                <Label id="_IDGenLabel24" text="Hire Date" design="Bold"/>
                <Input id="_IDGenInput6" value="{HireDate}" editable="false"/>

            </layout:SimpleForm>

            <Title id="_IDGenTitle4" text="Address Information" level="H2" class="myTitlePadding"/>
            <layout:SimpleForm id="_IDGenSimpleForm1" editable="false" columnsL="2" columnsM="2" labelSpanM="1" labelSpanL="1">

                <Label id="_IDGenLabel25" text="Address" design="Bold"/>
                <Input id="_IDGenInput7" value="{Address}" editable="false"/>

                <Label id="_IDGenLabel26" text="City" design="Bold"/>
                <Input id="_IDGenInput8" value="{City}" editable="false"/>

                <Label id="_IDGenLabel323" text="Show Picture" design="Bold"></Label>
                <Button id="_IDGenButton222" press="onOpenPictureFragment" text="Show"  class="sapUiSmallMarginBegin"></Button>

                <Label id="_IDGenLabel27" text="Region" design="Bold"/>
                <Input id="_IDGenInput9" value="{Region}" editable="false"/>

                <Label id="_IDGenLabel28" text="Postal Code" design="Bold"/>
                <Input id="_IDGenInput10" value="{PostalCode}" editable="false"/>

                <Label id="_IDGenLabel29" text="Country" design="Bold"/>
                <Input id="_IDGenInput11" value="{Country}" editable="false"/>
            </layout:SimpleForm>

            <Title id="_IDGenTitle5" text="Contact Information" level="H2" class="myTitlePadding"/>
            <layout:SimpleForm id="_IDGenSimpleForm2" editable="false" columnsL="2" columnsM="2" labelSpanM="1" labelSpanL="1">

                <Label id="_IDGenLabel30" text="Home Phone" design="Bold"/>
                <Input id="_IDGenInput12" value="{HomePhone}" editable="false"/>

                <Label id="_IDGenLabel31" text="Extension" design="Bold"/>
                <Input id="_IDGenInput13" value="{Extension}" editable="false"/>

                <Label id="_IDGenLabel34" text="Notes" design="Bold"/>
                <Text id="_IDGenText10" text="{Notes}" class="sapUiSmallMarginBegin"/>
            </layout:SimpleForm>
        </content>
    </Page>
</mvc:View>
