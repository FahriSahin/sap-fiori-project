<mvc:View
  controllerName="project2.controller.Main"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:f="sap.f"
  xmlns:cards="sap.f.cards">

  <Page id="pageMain" title="Main Page">
    <content>
      <FlexBox
        id="flexMain"
        wrap="Wrap"
        justifyContent="Start"
        alignItems="Start"
        class="sapUiMediumMargin">

        <!-- Product Card -->
        <f:Card id="cardProduct" width="300px" class="sapUiShadow cardCSS">
          <f:header>
            <cards:Header id="headerProduct" title="Products" subtitle="Product list"/>
          </f:header>
        </f:Card>

        <!-- Employee Card -->
        <f:Card id="cardEmployee" width="300px" class="sapUiShadow cardCSS">
          <f:header>
            <cards:Header id="headerEmployee" title="Employees" subtitle="Employee list"/>
          </f:header>
        </f:Card>

        <!-- Table Card -->
        <f:Card id="cardTable" width="300px" class="sapUiShadow cardCSS">
          <f:header>
            <cards:Header id="headerTable" title="Table" subtitle="Table Page"/>
          </f:header>
        </f:Card>

      </FlexBox>
    </content>
  </Page>
</mvc:View>
