<mvc:View
  controllerName="project2.controller.TablePage"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:viz="sap.viz.ui5.controls"
  xmlns:viz.data="sap.viz.ui5.data"
  xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds">

  <Page id="_IDGenPage2" title="{i18n>monthlySalesChart}">
    <content>
      <viz:VizFrame
        id="salesVizFrame"
        uiConfig="{applicationSet: 'fiori'}"
        vizType="line"
        width="100%"
        height="500px">

        <!-- Dataset aggregation -->
        <viz:dataset>
          <viz.data:FlattenedDataset id="_IDGenFlattenedDataset" data="{salesModel>/SalesByMonth}">
            <viz.data:dimensions>
              <viz.data:DimensionDefinition id="_IDGenDimensionDefinition" name="{i18n>month}" value="{salesModel>month}" />
            </viz.data:dimensions>
            <viz.data:measures>
              <viz.data:MeasureDefinition id="_IDGenMeasureDefinition" name="{i18n>sales}" value="{salesModel>Sales}" />
            </viz.data:measures>
          </viz.data:FlattenedDataset>
        </viz:dataset>

        <!-- Feeds aggregation -->
        <viz:feeds>
          <viz.feeds:FeedItem id="_IDGenFeedItem1" uid="categoryAxis" type="Dimension" values="{i18n>month}" />
          <viz.feeds:FeedItem id="_IDGenFeedItem2" uid="valueAxis" type="Measure" values="{i18n>sales}" />
        </viz:feeds>

      </viz:VizFrame>
    </content>
  </Page>
</mvc:View>
